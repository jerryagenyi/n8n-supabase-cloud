# Local Database (for n8n internal data)
POSTGRES_PASSWORD=your-strong-password
POSTGRES_USER=postgres
POSTGRES_DB=postgres

# n8n Auth
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-strong-password

# n8n config
# For local development, use localhost
# For production, use your domain name
N8N_HOST=your-domain-or-localhost
WEBHOOK_URL=https://your-domain-or-localhost

# Supabase Configuration
# Find these in Project Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_API_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Supabase Database Direct Connection
# Find these in Project Settings > Database
SUPABASE_DB_HOST=db.your-project-id.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-db-password
